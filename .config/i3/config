set $base01 #282a2e
set $base02 #373b41
set $base03 #969896
set $base04 #b4b7b4
set $base05 #c5c8c6
set $base06 #e0e0e0
set $base07 #ffffff
set $base08 #cc6666
set $base09 #de935f
set $base0A #f0c674
set $base0B #b5bd68
set $base0C #8abeb7
set $base0D #434c5e
set $base0E #b294bb
set $base0F #a3685a

# Start i3bar to display a workspace bar (plus the system information i3status
# Basic bar configuration using the Base16 variables.
bar {
    status_command i3status-rs /home/jxs/.config/i3/status.toml

    colors {
        background $base00
        separator  $base01
        statusline $base04

        # State             Border  BG      Text
        focused_workspace   $base01 $base0D $base04
        active_workspace    $base03 $base01 $base00
        inactive_workspace  $base01 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base00 $base0A $base00
    }
}

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base01 $base0D $base04 $base0D $base01
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base01 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

